[color]
    ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  editor = code
	excludesfile = ~/.gitignore_global
  pager = less -R
	autocrlf = true

[alias]
    br = branch
    co = checkout
    ci = commit
    rb = rebase
    df = diff -c --stat --ignore-space-change
    st = status
    who = shortlog -s --
    hist = log --pretty="tformat:\"%Cgreen%t%Creset %ad  %s%d [%an]\"" --graph --date=short
    ls = ls-files
    lg = log --graph --pretty=format:'%C(dim green)%h%  %C(dim cyan) %cr %C(yellow)%d%Creset %s  %C(dim yellow)%an'
